@using Figaros.Entities.Concrete;
@model IList<Slider>

<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">

        @for (int i = 0; i < Model.Count; i++)
        {
            <li data-target="#carouselExampleIndicators" data-slide-to="@i" class="@(i == 0 ? "active" : "")"></li>
        }

    </ol>
    <div class="carousel-inner">

        @for (int i = 0; i < Model.Count; i++)
        {
            <div class="carousel-item @(i == 0 ? "active" : "")">
                <img class="d-block w-100" src="~/uploads/Sliders/@Model[i].ImageString" alt="@i slider">
                <div class="carousel-caption d-none d-md-block slider_text">
                    <h1 style="color: white">
                        @Model[i].Title
                    </h1>
                    <p style="font-size: large;color: white">
                        @Model[i].Description
                    </p>
                    <a href="@Model[i].RedirectUrl" class="boxed-btn3">Get</a>
                </div>
            </div>
        }

    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>