@model Figaros.Entities.DTOs.UserDtos.ChangePasswordDto
@{
    ViewBag.Title = "Parol yenilə";
}

<div class="container">
    <div>
        <h1>Parol yenilə:</h1>
        <hr style="border-top: 3px solid #bbb; border-radius: 5px;">
    </div>
    <div>
        <form name="profession-form" asp-action="changePassword" method="post">

            <input name="IsValid" type="hidden" value="@ViewData.ModelState.IsValid.ToString()" />
            <div asp-validation-summary="All" class="text-danger" id="validation-summary" aria-hidden="true" style="display: none"></div>

            <input hidden="true" asp-for="Id" />

            <div class="row" style="justify-content: center; display: flex">

                <div class="form-group col-lg-4 col-md-12">
                    <label asp-for="OldPassword">Köhnə parol:</label>
                    <input type="password" class="form-control" asp-for="OldPassword" />
                    <span class="text-danger" asp-validation-for="OldPassword"></span>
                </div>

            </div>

            <div class="row" style="justify-content: center; display: flex">

                <div class="form-group col-lg-4 col-md-12">
                    <label asp-for="NewPassword">Yeni parol:</label>
                    <input type="password" class="form-control" asp-for="NewPassword" />
                    <span class="text-danger" asp-validation-for="NewPassword"></span>
                </div>

            </div>

            <div class="row" style="justify-content: center; display: flex">

                <div class="form-group col-lg-4 col-md-12">
                    <label asp-for="NewConfirmPassword">Yeni parolu təkrarla:</label>
                    <input type="password" class="form-control" asp-for="NewConfirmPassword" />
                    <span class="text-danger" asp-validation-for="NewConfirmPassword"></span>
                </div>

            </div>

            <div style="justify-content: center; display: flex">
                <a asp-controller="user" asp-action="update" asp-route-id="@Model.Id" class="btn btn-outline-danger mx-1"><span><i class="bi bi-x"></i></span> Geri</a>
                <button type="submit" class="btn btn-success mx-1"><span><i class="bi bi-save"></i></span> Yadda saxla</button>
            </div>
        </form>
    </div>
</div>
