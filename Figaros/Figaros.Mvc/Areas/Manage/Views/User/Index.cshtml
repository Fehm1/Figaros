@using Figaros.Shared.Entities.Concrete;
@model List<AppUser>
@{
    Layout = "_Layout";
    ViewBag.Title = "Adminlər";
    int count = 0;
}
<div id="modalPlaceHolder" aria-hidden="true"></div>

<div class="card shadow mb-12">
    <div class="card-header py-3">

        <div class="row align-items-center">
            <h3>Adminlər</h3>
        </div>

    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-borderless" id="professionTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>No</th>
                        <th>Şəkil</th>
                        <th>Rol</th>
                        <th>İstifadəçi adı</th>
                        <th>Tam ad</th>
                        <th>Email</th>
                        <th>Telefon</th>
                        <th>Əməliyyatlar</th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var user in Model)
                    {
                        @if (user.IsActive)
                        {
                            <tr>
                                <th scope="row">@(++count)</th>
                                <td><img src="~/uploads/Users/@user.Image" alt="@user.UserName" style="height: 50px; width: 50px; border-radius: 50%; object-fit: cover" /></td>
                                <td>@user.Role.Name</td>
                                <td>@user.UserName</td>
                                <td>@user.Name @user.Surname</td>
                                <td>@user.Email</td>
                                <td>@user.PhoneNumber</td>
                                <td style="text-align:center">
                                    <a class="btn btn-warning" asp-area="Manage" asp-controller="user" asp-action="update" asp-route-id="@user.Id"><i class="bi bi-pen-fill"></i></a>
                                    <a class="btn btn-danger deleteButton" asp-area="Manage" asp-controller="user" asp-action="Delete" asp-route-id="@user.Id"><i class="bi bi-trash-fill"></i></a>
                                </td>
                            </tr>
                        }
                        else
                        {
                            <tr style="background-color: #ffd0d0;">
                                <th scope="row">@(++count)</th>
                                <td><img src="~/uploads/Users/@user.Image" alt="@user.UserName" style="height: 50px; width: 50px; border-radius: 50%; object-fit: cover" /></td>
                                <td>@user.Role.Name</td>
                                <td>@user.UserName</td>
                                <td>@user.Name @user.Surname</td>
                                <td>@user.Email</td>
                                <td>@user.PhoneNumber</td>
                                <td style="text-align:center">
                                    <a class="btn btn-warning" asp-area="Manage" asp-controller="user" asp-action="update" asp-route-id="@user.Id"><i class="bi bi-pen-fill"></i></a>
                                    <a class="btn btn-danger deleteButton" asp-area="Manage" asp-controller="user" asp-action="Delete" asp-route-id="@user.Id"><i class="bi bi-trash-fill"></i></a>
                                </td>
                            </tr>
                        }
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>



